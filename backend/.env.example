# Node Environment
NODE_ENV=development

# Application Port (Container içi port - değiştirilmemeli)
APP_PORT=3000

# Database Configuration
DB_HOST=global_postgres
DB_PORT=5432
DB_USERNAME=dev_user
DB_PASSWORD=dev_pass
DB_NAME=tour_saas

# Database Sync (Production'da false olmalı, sadece development için true)
# İlk kurulum için true yapın, sonra false yapın veya kaldırın
DB_SYNC=false

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=12h

# RapidAPI Integration (Optional)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_TRAVEL_ADVISOR_HOST=travel-advisor.p.rapidapi.com

# OpenAI Integration (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (Optional - Queue için)
REDIS_HOST=global_redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_pass

# RabbitMQ Configuration (Optional - Email queue için)
RABBITMQ_HOST=global_rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin_pass
USE_EMAIL_QUEUE=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@saastour360.com
